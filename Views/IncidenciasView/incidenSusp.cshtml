@{
    ViewBag.Title = "incidenSusp";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight" ng-controller="SuspCtrl">
    <div class="row">
        <div class="col-lg-10">
            <div class="text-center m-t-lg">
                <div class="ibox-title" style="background:#0a1434; color:white;">
                    <h1><strong>Suspender Incidencia</strong></h1>

                </div><br />

                <div class="ibox-title">
                    <h5>Formulario para Suspender Incidencia</h5>
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal">

                        <div class="form-group">
                            <label class="col-lg-2 control-label">ID de Incidencia</label>

                            <div class="col-lg-10"><input type="text" ng-model="incidenciaID" placeholder="ID de Incidencia" class="form-control"></div>
                        </div>

                        <div class="form-group">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Comentario</label>
                                <div class="col-sm-10">
                                    <textarea rows="5" cols="10" ng-model="comentario" class="form-control" placeholder="Ingrese comentario"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button type="button" id="incCom" ng-click="saveSusp();" class="btn btn-info">Registrar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

