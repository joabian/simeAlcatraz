
@{
    ViewBag.Title = "Modificar equipo";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Modificar equipos</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("agregarEquipo", "EquiposView")">Inicio</a>
            </li>
            <li>
                <a>Equipos</a>
            </li>
            <li class="active">
                <strong>Modificar equipos</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight" ng-controller='EquipoController'>
    
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title text-center">
                    <h5>Equipos</h5>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nombre</th>
                                <th>Modelo</th>
                                <th>Marca</th>
                                <th>Categoria</th>
                                <th>Subcategoria</th>
                                <th>Serial</th>
                                <th>Descripcion</th>
                              
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="equipo in equiposJoin">
                                <td>{{$index+1}}{{myhtml}}</td>
                                <td ng-blur="updEquipo(equipo,$event,'nombreEquipo')" ng-dblclick="makeEditable($event)">{{equipo.nombreEquipo}}</td>
                                <td ng-blur="updEquipo(equipo,$event,'modeloEquipo')" ng-dblclick="makeEditable($event)">{{equipo.modeloEquipo}}</td>
                                <td ng-blur="updEquipo(equipo,$event,'marcaEquipo')" ng-dblclick="makeEditable($event)">{{equipo.marcaEquipo}}</td>
                                <td>
                                    {{equipo.nombreCategoria}}
                                </td>
                                <td>
                                    {{equipo.nombreSubcategoria}}
                                </td>
                                <td ng-blur="updEquipo(equipo,$event,'numeroSerie')" ng-dblclick="makeEditable($event)">{{equipo.numeroSerie}}</td>
                                <td ng-blur="updEquipo(equipo,$event,'descripcion')" ng-dblclick="makeEditable($event)">{{equipo.descripcion}}</td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


