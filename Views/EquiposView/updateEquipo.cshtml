
@{
    ViewBag.Title = "Modificar equipo";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight" ng-controller='EquipoController'>
    
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title text-center">
                    <h5>Equipos</h5>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nombre</th>
                                <th>Modelo</th>
                                <th>Marca</th>
                                <th>Categoria</th>
                                <th>Subcategoria</th>
                                <th>Serial</th>
                                <th>Descripcion</th>
                              
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="equipo in equipos">
                                <td>{{$index+1}}{{myhtml}}</td>
                                <td  ng-blur="updEquipo(equipo,$event,'nombreEquipo')" ng-dblclick="makeEditable($event)">{{equipo.nombreEquipo}}</td>
                                <td  ng-blur="updEquipo(equipo,$event,'modeloEquipo')" ng-dblclick="makeEditable($event)">{{equipo.modeloEquipo}}</td>
                                <td  ng-blur="updEquipo(equipo,$event,'marcaEquipo')" ng-dblclick="makeEditable($event)">{{equipo.marcaEquipo}}</td>
                                <td ng-dblclick="makeEditable2($event,equipo.equipoID)">
                                    {{equipo.id_categoria}}
                                    <select class="animated fadeInRight" id="categoria{{equipo.equipoID}}" style="display:;"
                                            ng-options="Categoria.nombre for Categoria in categorias track by Categoria.categoriaID"
                                            ng-model="catego" ng-change="updateCatEqui($event,catego.categoriaID)">
                                        <option value="">Seleccione una categoria</option>
                                    </select>
                                    
                                </td>
                                <td>{{equipo.id_subcategoria}}
                                </td>
                                <td  ng-blur="updEquipo(equipo,$event,'numeroSerie')" ng-dblclick="makeEditable($event)">{{equipo.numeroSerie}}</td>
                                <td  ng-blur="updEquipo(equipo,$event,'descripcion')" ng-dblclick="makeEditable($event)">{{equipo.descripcion}}</td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


