
@{
    ViewBag.Title = "agregarEquipo";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>agregarEquipo</h2>

<div class="wrapper wrapper-content animated fadeInRight" ng-controller="EquipoController">
    <div class="row">
        <div class="col-lg-10">
            <div class="ibox float-e-margins">
                <div class="row wrapper border-bottom white-bg page-heading">
                    <div class="col-lg-10">
                        <h2>Registrar equipo</h2>
                    </div>
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal" enctype="multipart/form-data">

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Nombre</label>
                            <div class="col-sm-10"><input type="text" placeholder="Nombre" data-ng-model="nombreEquipo" class="form-control"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Modelo</label>
                            <div class="col-sm-10"><input type="text" placeholder="Modelo" data-ng-model="modelo" class="form-control"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Marca</label>
                            <div class="col-sm-10"><input type="text" placeholder="Marca" data-ng-model="marcaEquipo" class="form-control"></div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Categoria</label>
                            <div class="col-sm-10">
                                <select class="form-control" name="CategoriaEquipo" id="CategoriaEquipo"
                                        ng-init="somethingHere = somethingHere || options[0].value"
                                        ng-options="categoria.nombre for categoria in data.Categorias track by categoria.categoriaID"
                                        ng-model="data.catego" ng-change="update(data.catego.categoriaID)"></select>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Subcategoria</label>
                            <div class="col-sm-10">
                                <select class="form-control" name="SubcategoriaEquipo" id="SubcategoriaEquipo"
                                        ng-options="Subcategoria.nombre for Subcategoria in data2.Subcategorias track by Subcategoria.subcategoriaID"
                                        ng-model="data2.subcategos"></select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Serializado</label>
                            <div class="col-sm-10">
                                <div class="i-checks"><label><input type="checkbox" ng-model="checked" aria-label="Toggle ngShow" data-ng-click="ocultar();"> <i></i></label></div>
                            </div>
                        </div>
                        <div class="form-group check-element animate-show-hide" ng-show="checked">
                            <label class="col-sm-2 control-label">Número de serie</label>
                            <div class="col-sm-10"><input type="text" placeholder="Número de serie" data-ng-model="noserie" class="form-control "></div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Foto</label>
                            <div class="col-sm-10">
                                <div class="fileinput fileinput-new" data-provides="fileinput" data-ng-model="foto2">
                                    <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;"></div>
                                    <div>
                                        <span class="btn btn-default btn-file"><span class="fileinput-new">Seleccionar imagen</span><span class="fileinput-exists">Cambiar</span><input type="file" file-model="foto" name="imgUpl" id="imguplo"></span>
                                        <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Eliminar</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Descripcion</label>
                            <div class="col-sm-10"><textarea class="form-control" rows="4" id='areaDescripcion' data-ng-model="descripcion" placeholder='Descripcion'></textarea></div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button type="button" id="btnAddCategoria" data-ng-click="saveEquipo();" class="btn btn-info">Añadir</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="/jasny/jasny-bootstrap.min.css" rel="stylesheet">
<!-- Jasny -->
<script src="/jasny/jasny-bootstrap.min.js"></script>


