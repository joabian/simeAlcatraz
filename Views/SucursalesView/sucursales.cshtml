@{
    ViewBag.Title = "sucursales";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight" ng-controller="SucursalCtrl">
    <div class="row">
        <div class="col-lg-12">
            <div class="text-center m-t-lg">
                <div class="ibox-title" style="background:#0a1434; color:white;">
                    <h1><strong>Sucursales Alcatraz GYM</strong></h1>
                </div><br />

                <div class="col-lg-4 col-sm-10" ng-repeat="Sucursal in data.suc">
                    <div class="ibox">
                        <div class="ibox-content product-box">
                            <div class="product-imitation">
                                <img src="../img/Sucursales/{{Sucursal.nombre}}.jpg" style="width:100%;height:230px;">
                            </div>
                            <div class="product-desc">
                                <small class="text-muted">Sucursal</small>
                                <a href="#" class="product-name"> {{Sucursal.nombre}}</a>

                                <div class="small m-t-xs">
                                    <p>
                                        Encargado:<strong> {{Sucursal.encargado}}</strong><br /><br />
                                        Direccion: {{Sucursal.direccion}}<br />
                                        Telefono: {{Sucursal.telefono}}<br />
                                        E-mail: {{Sucursal.email}}<br />
                                        Horario: {{Sucursal.horario}}<br />
                                    </p>

                                </div>
                                <div class="m-t text-righ">
                                    <a href="#" class="btn btn-xs btn-outline btn-primary">Cambiar encargado <i class="fa fa-long-arrow-right"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

