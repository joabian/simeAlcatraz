@{
    ViewBag.Title = "ticketForm";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight" ng-controller="IncidenciaController">
    <div class="row">
        <div class="col-lg-10">
            <div class="text-center m-t-lg">
                <div class="ibox-title" style="background:#0a1434; color:white;">
                    <h1><strong>Crear reporte</strong></h1>

                </div><br />

                <div class="ibox-title">
                    <h5>Formulario para reportar desperfecto en equipo de Alcatraz Gym</h5>
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal">

                        <div class="form-group">
                            <label class="col-lg-2 control-label">Usuario</label>
                            <div class="col-lg-10">
                                <input type="text" ng-model="usuario" placeholder="Usuario" class="form-control">
                                <span class="help-block m-b-none">
                                    Es el número telefónico con que te registraste
                                </span>
                            </div>
                            <br />
                        </div>

                        <div class="form-group">
                            <label class="col-lg-2 control-label">Equipo</label>

                            <div class="col-lg-10"><input type="text" ng-model="equipoID" placeholder="Equipo" class="form-control"></div>
                            <span class="help-block m-b-none">
                                Numero de equipo que muestra en su etiqueta
                            </span>
                        </div>

                        <div class="form-group">

                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Descripción</label>
                                <div class="col-sm-10">
                                    <textarea rows="5" cols="10" class="form-control" ng-model="descripcion" placeholder="Ingrese una descripcion"></textarea>
                                </div>
                            </div>
                        </div>

                        <br />
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button type="button" id="incProb" ng-click="saveIncidencia();" class="btn btn-info">Registrar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


